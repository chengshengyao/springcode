<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--声明学生对象-->
    <!--通过byType给引用数据类型School赋值-->
    <!--    学校模块的所有BEAN的声明-->
    <!--        在xml文件中通过类型的自动注入有三种满足条件但是只能同时存在一条对象属性赋值语句，
                会有异常产生【NoUniqueBeanDefinitionException】-->
    <bean id="yourSchool" class="com.bjpowernode.ba06.School">
        <property name="name" value="社会大学奥利给"/>
        <property name="add" value="浦东房价还行"/>
    </bean>


</beans>